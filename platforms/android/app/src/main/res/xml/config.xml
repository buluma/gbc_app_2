<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="com.gbckenya.gbc.android" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>GBC - Stock Monitoring 2.0</name>
    <description>GBC - Stock Tracking Applications</description>
    <author>Greenbell Communications</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*,mailto:*" />
    <icon density="ldpi" height="36" platform="android" src="img/icons/icon36x36.png" width="36" />
    <icon density="mdpi" height="48" platform="android" src="img/icons/icon48x48.png" width="48" />
    <icon density="hdpi" height="72" platform="android" src="img/icons/icon72x72.png" width="72" />
    <icon density="xhdpi" height="96" platform="android" src="img/icons/icon96x96.png" width="96" />
    <config-file mode="merge" parent="/manifest/application" platform="android">
        <activity android:launchMode="singleTop" />
    </config-file>
    <preference name="loglevel" value="DEBUG" />
    <preference name="phonegap-version" value="cli-6.5.0" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="19" />
    <preference name="android-installLocation" value="auto" />
    <preference name="android-signed" value="true" />
    <preference name="xwalkMode" value="shared" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
</widget>
